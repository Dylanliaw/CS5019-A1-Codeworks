@page
@model CS5019_A1_Codeworks.Pages.Customer.LocationModel
@{
    ViewData["Title"] = "Find Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css"> <!-- Link to the external CSS file -->
</head>
<body>
    <div class="container">
        <br />
        <h1 class="page-title">Find Us</h1>
        <p class="description">Come visit us at our location! We're always happy to welcome you.</p>

        <!-- Google Maps Link -->
        <div class="map-link">
            <a href="https://maps.app.goo.gl/Hbd84sz4iH7H1CPQ8" target="_blank" class="google-maps-link">
                View on Google Maps
            </a>
        </div>

        <!-- Google Map Embed -->
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3975.5899033432956!2d114.845429!3d4.8402579999999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zNMKwNTAnMjQuOSJOIDEx4KwNTAnNDMuNSJF!5e0!3m2!1sen!2sbn!4v1731049723140!5m2!1sen!2sbn"
                    width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</body>
</html>
