@page
@model CS5019_A1_Codeworks.Pages.Customer.ProductModel

<br />
<div class="container">
    <h2 class="text-center">Our Products</h2>
    
    <!-- Sort By Dropdown -->
    <form method="get" class="d-flex justify-content-end mb-4" id="sortForm">
        <div class="form-group mb-0">
            <select name="sortBy" id="sortBy" class="form-control form-control-sm" onchange="this.form.submit()">
                <option value="">Select Category</option>
                <option value="">All Categories</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>
    </form>

    <!-- Product Grid -->
    <div class="product-grid">
        @foreach (var product in Model.Products)
        {
            <div class="product-card-container">
                <a href="/Customer/ProductDetail?id=@product.ProductId" class="product-card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.ItemName" />
                    <div class="card-body">
                        <h5 class="card-title">@product.ItemName</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><strong>@product.SellingPrice.ToString("C")</strong></p>
                        <p class="card-text"><strong>Category:</strong> @product.Category</p>
                        <p class="card-text"><strong>Stock:</strong> @product.Stock</p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
