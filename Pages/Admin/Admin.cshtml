@page
@model CS5019_A1_Codeworks.Pages.Admin.AdminModel
@{
    ViewData["Title"] = "Admin Panel";
}

<link rel="stylesheet" href="~/css/your-stylesheet.css" />
<script src="~/js/site.js"></script>
<br />
<h2 class="center-text text-center">ADD ITEMS</h2>
<br />
<form method="post" enctype="multipart/form-data" class="admin-page">
    <div class="mb-3">
        <label asp-for="NewProduct.ItemName" class="form-label">Item Name</label>
        <input asp-for="NewProduct.ItemName" class="form-control custom-input" required />
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.Description" class="form-label">Description</label>
        <input asp-for="NewProduct.Description" class="form-control custom-input" required />
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.Brand" class="form-label">Brand</label>
        <input asp-for="NewProduct.Brand" class="form-control custom-input" required />
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.CostPrice" class="form-label">Cost Price</label>
        <input asp-for="NewProduct.CostPrice" class="form-control custom-input" type="number" step="0.01" required />
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.SellingPrice" class="form-label">Selling Price</label>
        <input asp-for="NewProduct.SellingPrice" class="form-control custom-input" type="number" step="0.01" required />
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.DiscountPrice" class="form-label">Discount Price</label>
        <input asp-for="NewProduct.DiscountPrice" class="form-control custom-input" type="number" step="0.01" />
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.Stock" class="form-label">Stock</label>
        <input asp-for="NewProduct.Stock" class="form-control custom-input" type="number" required />
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.Category" class="form-label">Category</label>
        <input asp-for="NewProduct.Category" class="form-control custom-input" required />
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Product Image</label>
        <input type="file" name="Image" class="form-control-file" required />
    </div>
    <div class="d-flex justify-content-end mt-4 button-container">
        <button type="reset" class="btn btn-reset me-2">Reset</button>
        <button type="submit" class="btn btn-submit">Submit</button>
    </div>
</form>

<h2 class="text-center">Current Products</h2>

<!-- Search Bar for Products -->
<form method="get" class="mb-3 text-center">
    <input type="text" id="searchInput" name="searchQuery" value="@Model.SearchQuery" placeholder="Search products..." class="table-search-bar" />

</form>

<div class="container admin-table-container" style="padding-bottom: 80px;">
    @if (Model.Products != null && Model.Products.Any())
    {
        <table class="table white-background-table" id="productTable">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Item Name</th>
                    <th>Description</th>
                    <th>Brand</th>
                    <th>Cost Price</th>
                    <th>Selling Price</th>
                    <th>Stock</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            <img src="@product.ImageUrl" alt="@product.ItemName" class="admin-img-thumbnail" />
                        </td>
                        <td>@product.ItemName</td>
                        <td>@product.Description</td>
                        <td>@product.Brand</td>
                        <td>@product.CostPrice.ToString("C")</td>
                        <td>@product.SellingPrice.ToString("C")</td>
                        <td>@product.Stock</td>
                        <td>@product.Category</td>
                        <td>
                            <a asp-page="/Admin/Edit" asp-route-id="@product.ProductId" class="btn btn-primary btn-sm">Edit</a>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@product.ProductId" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products available.</p>
    }
</div>
