@page
@model CS5019_A1_Codeworks.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <div class="container">
        <div class="page-title text-center">
            <br />
            <h1 class="title">Welcome to AMK Enterprise</h1>
            <p class="lead">Hardware & Machinery</p>
        </div>

        <!-- Featured Products Section -->
        <div class="row mt-5">
            <div class="col-lg-12 text-center">
                <h2 class="title">Featured Products</h2>
                <div class="product-container row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card">
                                <img class="product-img card-img-top" src="@product.ImageUrl" alt="@product.ItemName" />
                                <div class="card-body">
                                    <h5 class="product-name card-title">@product.ItemName</h5>
                                    <p class="product-description card-text">@product.Description</p>
                                    <p class="product-price card-text"><strong>@product.SellingPrice.ToString("C")</strong> </p> <!-- Format price as currency -->
                                    <a href="@Url.Page("/Customer/ProductDetail", new { id = product.ProductId })" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
